<UserControl x:Class="Dev.Sensors.SensorAltimeterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Dev.Controls" d:DataContext="{d:DesignInstance }">
   
        <Grid>
            <StackPanel>
                <controls:AltimeterUserControl
                x:Name="AltimeterUserControl"
                AltimeterHeight="250"
                AltimeterWidth="250"
                AltitudeValue="{Binding Score}" />
            </StackPanel>
        </Grid>
</UserControl>
